<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_sign_RelativeLayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login1_background"
    android:gravity="center_horizontal">
    <!-- 导航头-->
    <com.aisino.trusthandwrite.custom.TopNavigationView
        android:id="@+id/af_navigation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
    </com.aisino.trusthandwrite.custom.TopNavigationView>

    <ImageView
        android:id="@+id/af_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main3_002"
        android:scaleType="fitStart"
        android:paddingTop="10dp"
        android:layout_below="@+id/af_navigation" />

    <LinearLayout
        android:id="@+id/af_file_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/af_title"
        android:visibility="gone">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/filedoc"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/af_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="文件名"
            android:layout_gravity="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/af_findBtn"
        android:layout_margin="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:onClick="findFileBtnClick"
        android:text="选择文件"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:background="@drawable/login1_008"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>